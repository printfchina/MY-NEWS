<div class="news-item type-3" data-page="{{pageNum}}" data-index="{{index}}">
	<div class="main">
		<div class="title">
			<h1>{{title}}</h1>
		</div>
		<div class="pic">
			<div class="img">
				<img src="{{thumbnail_pic_s}}" class="news-thumb" alt="{{title}}" />
			</div>
			<div class="img">
				<img src="{{thumbnail_pic_s02}}" class="news-thumb" alt="{{title}}" />
			</div>
			<div class="img last">
				<img src="{{thumbnail_pic_s03}}" class="news-thumb" alt="{{title}}" />
			</div>
		</div>
	</div>
	<div class="info">
		<span class="author">{{author}}</span>
		<span class="date">{{date}}</span>
	</div>
</div>